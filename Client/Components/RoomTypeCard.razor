@using HotelFinal.Shared;

<div class="card">
    <div class="card-header">
        <img class="card-img-top" src="icons/double-bed.png"/>
    </div>
    <div class="card-body">
        <div class="text-center fw-bold">
            @RoomType.RType
        </div>
        <div>
            <i class="bi bi-currency-dollar mx-0 my-auto"></i>@RoomType.BaseRentalRate
        </div>
        <div>
            @if (RoomType.Smoking)
            {
                <i class="bi bi-check text-success">Smoking</i>
            }
            else
            {
                <i class="bi bi-slash-circle text-danger">No Smoking</i>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public RoomType RoomType { get; set; }
}
